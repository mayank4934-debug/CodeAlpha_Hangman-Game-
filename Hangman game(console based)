import random

words = ["python", "developer", "hangman", "program", "coding"]
chosen_word = random.choice(words)

guessed_letters = []
attempts = 6

print("ğŸ® Welcome to Hangman Game")

while attempts > 0:
    display_word = ""
    for letter in chosen_word:
        if letter in guessed_letters:
            display_word += letter + " "
        else:
            display_word += "_ "

    print("\nWord:", display_word.strip())

    if "_" not in display_word:
        print("ğŸ‰ Congratulations! You guessed the word.")
        break

    guess = input("Guess a letter: ").lower()

    if guess in guessed_letters:
        print("âš ï¸ You already guessed this letter.")
        continue

    guessed_letters.append(guess)

    if guess not in chosen_word:
        attempts -= 1
        print(f"âŒ Wrong guess! Attempts left: {attempts}")

if attempts == 0:
    print("ğŸ’€ Game Over! The word was:", chosen_word)
